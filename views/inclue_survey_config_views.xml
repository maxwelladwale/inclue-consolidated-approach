<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_inclue_survey_config_tree" model="ir.ui.view">
        <field name="name">inclue.survey.config.tree</field>
        <field name="model">inclue.survey.config</field>
        <field name="arch" type="xml">
            <tree string="Survey Configuration">
                <field name="sequence" widget="handle"/>
                <field name="session_type"/>
                <field name="survey_id"/>
                <field name="days_until_next"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_inclue_survey_config_form" model="ir.ui.view">
        <field name="name">inclue.survey.config.form</field>
        <field name="model">inclue.survey.config</field>
        <field name="arch" type="xml">
            <form string="Survey Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="session_type"/>
                            <field name="survey_id"/>
                        </group>
                        <group>
                            <field name="days_until_next"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_inclue_survey_config" model="ir.actions.act_window">
        <field name="name">Survey Configuration</field>
        <field name="res_model">inclue.survey.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure surveys for each session type
            </p>
        </field>
    </record>
</odoo>